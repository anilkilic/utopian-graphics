<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">{{mod}}'s reviews</a><span class="badge badge-primary">{{total}}</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/moderator/{{mod}}/reviewed">Reviewed <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/moderator/{{mod}}/flagged">Flagged</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/moderator/{{mod}}/pending">Pending</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="card-columns">
        {{#each posts}}
        <div class="card">
            <img class="card-img-top" src="{{{this.json_metadata.image.[0]}}}" alt="Img">
            <div class="card-body">
                <h5 class="card-title">
                    {{this.title}} <small>by <a href="/user/{{this.author}}">{{this.author}}</a></small>
                </h5>
                <a href="/project/{{this.json_metadata.repository.id}}" class="btn btn-block btn-outline-primary btn-sm">{{this.json_metadata.repository.full_name}}</a>
                <hr>
                <p class="card-text">
                    <small class="text-muted"><span class="float-left">Reviewed by <a href="/moderator/{{this.moderator}}">{{this.moderator}}</a><br/>
                    {{this.json_metadata.moderator.time}}</span></small>
                </p>
                <p class="float-right">
                    <a href="https://utopian.io{{url}}" class="btn btn-primary float-right" target="_blank">View</a>
                </p>
            </div>
        </div>        
        {{/each}}
    </div>
</div>
