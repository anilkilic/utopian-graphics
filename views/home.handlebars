<div class="container">
    <h1>{{title}}</h1>

    <div class="card-columns">
        {{#each posts}}
        <div class="card">
            <img class="card-img-top" src="{{{this.json_metadata.image.[0]}}}" alt="Img">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.author}}</p>
                <p class="card-text">Reviewed by <a href="moderator/{{this.moderator}}">{{this.moderator}}</a></p>
                <p class="card-text"><small class="text-muted">{{this.json_metadata.moderator.time}}</small></p>
                <p>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
                        View
                    </button>
                </p>
            </div>
        </div>

        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">{{this.title}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{this.body}}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                </div>
            </div>
        </div>
        
        {{/each}}
    </div>
</div>