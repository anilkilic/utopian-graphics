<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="mr-1" href="https://github.com/{{project}}" target="_blank" alt="Open in GitHub"><i class="fab fa-github-square fa-2x"></i></a>
        <a class="navbar-brand" href="#">{{project}}'s contributions</a>
        <span class="badge badge-primary">{{total}}</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/project/{{project}}/reviewed">Reviewed <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/project/{{project}}/flagged">Flagged</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/project/{{project}}/pending">Pending</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="card-columns">
        {{#each posts}}
        <div class="card">
            <img class="card-img-top" src="{{{this.json_metadata.image.[0]}}}" alt="Img">
            <div class="card-body">
                <h5 class="card-title">
                    {{this.title}} <small>by <a href="/user/{{this.author}}">{{this.author}}</a></small>
                </h5>
                <a href="/project/{{this.json_metadata.repository.full_name}}" class="btn btn-block btn-outline-primary btn-sm">{{this.json_metadata.repository.full_name}}</a>
                <hr>
                <p class="card-text">
                    <small class="text-muted"><span class="float-left">Reviewed by <a href="/moderator/{{this.moderator}}">{{this.moderator}}</a><br/>
                    {{formatDate this.json_metadata.moderator.time}}</span></small>
                </p>
                <div class="float-right mb-3">
                    <div class="btn-group">
                        <a href="https://utopian.io{{url}}" class="btn btn-primary" target="_blank">View</a>
                        <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" target="_blank" href="https://phist.steemdata.com/history?identifier={{url}}">Phist</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
    {{>pagination}}
</div>
